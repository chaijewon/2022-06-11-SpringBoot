<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="std" class="com.it.constuctor.Student">
       <constructor-arg value="1" index="0"/>
       <constructor-arg value="홍길동" index="1"/>
       <constructor-arg value="90" index="2"/>
       <constructor-arg value="80" index="3"/>
       <constructor-arg value="80" index="4"/>
    </bean>
    <!-- 가장 많이 사용  -->
    <bean id="std1" class="com.it.constuctor.Student"
      c:hakbun="2" 
      c:name="박문수"
      c:kor="90"
      c:eng="80"
      c:math="70"
    />
    
    <bean id="std2" class="com.it.constuctor.Student"
      c:_0="3"
      c:_1="이순신"
      c:_2="90"
      c:_3="80"
      c:_4="90"
    />
</beans>
